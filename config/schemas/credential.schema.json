{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Credential",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "description": "Username (domain-qualified or plain)."
    },
    "password": {
      "type": "string",
      "minLength": 1,
      "description": "Password (store securely; configs are gitignored)."
    }
  },
  "required": ["username", "password"]
}
